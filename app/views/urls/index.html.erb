<div class="col-md-6 col-md-offset-3">
	<div class="main-card">
		<h2 class="text-center">Url Shortener</h2>
		<%= simple_form_for @url, html: {class: "text-center"} do |f| %>
			<%= f.input :original_url, as: :string, placeholder: "Enter the URL you want to shorten...", label: false, class: 'input-large' %>
			<%= f.submit "Create!", class: "btn btn-green" %>
		<% end %>
	</div>
</div>